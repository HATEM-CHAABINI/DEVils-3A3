{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evenement</h1>

    <table>
        <tbody>
            <tr>
                <th>Idevent</th>
                <td>{{ evenement.idevent }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ evenement.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Dated</th>
                <td>{% if evenement.dated %}{{ evenement.dated|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datef</th>
                <td>{% if evenement.datef %}{{ evenement.datef|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Salle</th>
                <td>{{ evenement.salle }}</td>
            </tr>
            <tr>
                <th>Prixenfant</th>
                <td>{{ evenement.prixenfant }}</td>
            </tr>
            <tr>
                <th>Prixadulte</th>
                <td>{{ evenement.prixadulte }}</td>
            </tr>
            <tr>
                <th>Prixetudiant</th>
                <td>{{ evenement.prixetudiant }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ evenement.time }}</td>
            </tr>
            <tr>
                <th>Typeevent</th>
                <td>{{ evenement.typeevent }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ evenement.image }}</td>
            </tr>
            <tr>
                <th>Nbrplace</th>
                <td>{{ evenement.nbrplace }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('evenement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('evenement_edit', { 'idevent': evenement.idevent }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
