{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Locked</th>
                <th>Expired</th>
                <th>Expiresat</th>
                <th>Credentialsexpired</th>
                <th>Credentialsexpireat</th>
                <th>Departement</th>
                <th>Qr</th>
                <th>Image</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Ville</th>
                <th>Datenaissance</th>
                <th>Bio</th>
                <th>Domaine</th>
                <th>Note</th>
                <th>Adresse</th>
                <th>Codepostal</th>
                <th>Sexe</th>
                <th>Telephone</th>
                <th>Cin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{% if user.locked %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.expired %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.expiresAt %}{{ user.expiresAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.credentialsExpired %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.credentialsExpireAt %}{{ user.credentialsExpireAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.departement }}</td>
                <td>{{ user.qr }}</td>
                <td>{{ user.image }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.ville }}</td>
                <td>{% if user.dateNaissance %}{{ user.dateNaissance|date('Y-m-d') }}{% endif %}</td>
                <td>{{ user.bio }}</td>
                <td>{{ user.domaine }}</td>
                <td>{{ user.note }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.codePostal }}</td>
                <td>{{ user.sexe }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.cin }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
