{% extends 'baseB.html.twig' %}

{% block body %}
                                    {% if app.user %}

    <h1>Envoie de mail</h1>
    <div id="button">
        <a href="{{ path('EnvoieMail') }}">
            <button value="mail"  class="butons">mail</button>
        </a>
    </div>


    <h1>Livres list</h1>

    <table class="table table-condensed table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Genre</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td><a href="{{ path('livre_show', { 'id': livre.id }) }}">{{ livre.id }}</a></td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{{ livre.genre }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.quantite }}</td>
                <td>{{ livre.description }}</td>
                <td>{{ livre.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a  type="button" class="btn btn-blue" href="{{ path('livre_show', { 'id': livre.id }) }}">show</a>
                        </li>
                        <li>
                            <a type="button" class="btn btn-orange" href="{{ path('livre_edit', { 'id': livre.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('livre_new') }}">Create a new livre</a>
        </li>
    </ul>
    {#<div class="g-reCAPTCHA" data-sitekey="6LeTXQgUAAAAAGByWkRSVeJxE274kd7zz8_ksXI2"></div>#}
{% endif %}
{% endblock %}
