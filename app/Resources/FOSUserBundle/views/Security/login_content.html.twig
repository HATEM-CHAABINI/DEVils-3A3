
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username"></label>
    <div class="input-group">
        <div class="input-group-addon">
            <i class="entypo-user"></i>
        </div>

        <input type="text" class="form-control"  name="_username" id="username" required="required" placeholder="Username" value="{{ last_username }}" required="required" autocomplete="username1" />
    </div>

    <label for="password"></label>

    <div class="input-group">
        <div class="input-group-addon">
            <i class="entypo-key"></i>
        </div>

        <input type="password" class="form-control" name="_password" id="password" placeholder="Password" required="required" autocomplete="current-password" />
    </div>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me"></label>
    <div class="form-group">
        <button class="btn btn-primary btn-block btn-login" type="submit" id="_submit" name="_submit"  />
            <i class="entypo-login"></i>
            Login In
        </button>
    </div>

</form>
